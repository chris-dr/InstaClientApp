<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/itemMediaImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/itemMediaLikesImg"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:tint="@color/woodyBrown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemMediaImage"
            app:srcCompat="@drawable/ic_favourite" />

        <TextView
            android:id="@+id/itemMediaLikesLabel"
            style="@style/Caption.WoodyBrown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/rubik_medium"
            app:layout_constraintBottom_toBottomOf="@+id/itemMediaLikesImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemMediaLikesImg"
            app:layout_constraintTop_toTopOf="@+id/itemMediaLikesImg"
            tools:ignore="SmallSp"
            tools:text="10 people like this 10 people like this 10 people like this 10 people like this" />

        <TextView
            android:id="@+id/itemMediaLocationLabel"
            style="@style/Caption.WoodyBrown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/itemMediaLikesLabel"
            app:layout_constraintTop_toBottomOf="@+id/itemMediaLikesLabel"
            tools:ignore="SmallSp"
            tools:text="Some location here" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>