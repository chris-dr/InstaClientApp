<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/itemFeedErrorMessage"
        style="@style/Body1.WoodyBrownText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/itemFeed_errorMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemFeedErrorRetryBtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/itemFeedErrorRetryBtn"
        style="@style/TextButton.WoodyBrownText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/itemFeed_retry"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemFeedErrorMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemFeedErrorMessage"
        app:layout_constraintTop_toTopOf="@+id/itemFeedErrorMessage"
        app:strokeColor="@color/woodyBrown" />

</androidx.constraintlayout.widget.ConstraintLayout>