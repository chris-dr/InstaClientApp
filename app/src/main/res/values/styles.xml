<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="InstaClientTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="colorPrimaryDark">@color/beautyBush</item>
        <item name="colorPrimary">@color/watusi</item>
        <item name="colorAccent">@color/beautyBush</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/soapstone</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.BeautyBush</item>
        <item name="android:textViewStyle">@style/RubikTextViewStyle.WoodyBrown</item>
        <item name="android:navigationBarColor">#BFFFFFFF</item>
    </style>

    <style name="InstaClientTheme.WebLoginTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Widget.MaterialComponents.Snackbar.BeautyBush">
        <item name="android:background">@color/bridesmaid95Percent</item>
    </style>

    <style name="RubikTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="RubikTextViewStyle.WoodyBrown">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Button.WoodyBrownText.Watusi">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/watusi</item>
    </style>

    <style name="H5">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H6" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle1" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body2">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="H5.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="H6.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Subtitle1.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Body1.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Body2.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Button.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="TextButton.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

    <style name="Caption.WoodyBrownText">
        <item name="android:textColor">@color/woodyBrown</item>
    </style>

</resources>
